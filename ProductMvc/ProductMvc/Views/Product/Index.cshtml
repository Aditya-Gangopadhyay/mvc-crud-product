@model Product
@{
    ViewData["Title"] = "Product List";
}

<h3>
    @ViewData["Title"]
</h3>
<hr/>
<div>
    <button class="btn btn-primary mb-2" id="btnAdd">Add Product</button>
</div>
<div class="container">
    <table class="table table-success table-bordered table-striped table-hover table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Product Name</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody id="tblBody">
        </tbody>
    </table>
</div>

<!-- Product Modal -->
<div class="modal" id="ProductModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h3 class="modal-title" id="modalTitle"></h3>
            </div>
            <div class="modal-body">
                <input type="hidden" asp-for="Id" value="0"/>
                <div class="mb-2">
                    <label asp-for="ProductName"></label>
                    <input type="text" asp-for="ProductName" class="form-control" placeholder="Product Name"/>
                </div>
                <div class="mb-2">
                    <label asp-for="Price"></label>
                    <input type="number" asp-for="Price" class="form-control" placeholder="Price" />
                </div>
                <div class="mb-2">
                    <label asp-for="Qty"></label>
                    <input type="number" asp-for="Qty" class="form-control" placeholder="Qty" />
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-danger" data-bs-dismiss="modal" onclick="HideModal()">Close</button>
                <button class="btn btn-primary" id="Save" type="submit" onclick="Insert()">Save</button>
                <button class="btn btn-primary" id="Update" type="submit" onclick="Update()" style="display:none">Update</button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Delete Product</h1>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="ProductName" />
                <input type="hidden" asp-for="Price" />
                <input type="hidden" asp-for="Qty" />
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="HideModal()"></button>
            </div>
            <div class="modal-body" id="modalBodyDelete">
                <div class="text-danger">You can not undo this change.</div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal" onclick="HideModal()">Close</button>
                <button type="submit" class="btn btn-danger" onclick="DeleteByModal()">Delete</button>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/product.js"></script>